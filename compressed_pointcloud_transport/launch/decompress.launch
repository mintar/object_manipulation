<launch>

    <arg name="debug" default="false" />

    <arg if="$(arg debug)"      name="debug_prefix" value="xterm -e gdb -ex run --args" />
    <arg unless="$(arg debug)"  name="debug_prefix" value="" />
    
    <node pkg="compressed_pointcloud_transport" launch-prefix="$(arg debug_prefix)" name="cloud_decompressor" type="cloud_decompressor" respawn="false" output="screen">
      <remap from="input"  to="/compressed_cloud" />
      <remap from="output" to="/head_mount_kinect/rgb/points2_compressed" />
    </node>
</launch>     
